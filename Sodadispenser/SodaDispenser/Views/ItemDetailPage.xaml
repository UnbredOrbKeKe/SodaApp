<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SodaDispenser.Views.ItemDetailPage"
             Title="{Binding Title}">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Delete"/>
    </ContentPage.ToolbarItems>

    <StackLayout Spacing="2" Padding="15">
        <Label Text="Text:" 
               FontSize="Medium" 
               TextColor="Black" />
        
        <Label x:Name="naam" 
               Text="{Binding Text}" 
               FontSize="Small" 
               TextColor="Black"/>
        
        <Label Text="Description:" 
               FontSize="Medium" 
               TextColor="Black"/>
        
        <Label Text="{Binding Description}" 
               FontSize="Small" 
               TextColor="Gray"/>
        
        <Label Text="mixCode van uw drank:" 
               FontSize="Medium" 
               TextColor="Black"/>
        
        <Label Text="{Binding MixCode}" 
               FontSize="Small" 
               TextColor="gray"
               x:Name="mixCode"
               />
        
        <Label Text="" x:Name="testje" TextColor="purple" FontSize="Small"/>
        <Button Text="LETS MIX!" Clicked="letsMix"/>
    </StackLayout>
    
</ContentPage>